build-type:          Simple
extra-source-files: CHANGELOG.md

executable polymult
  main-is:             Main.hs
  other-modules:
    Algebra.FField,
    Algebra.Fourier,
    Algebra.NTT,
    Algebra.PolyRings,
    Compile.CompileKernel,
    Interface.PolyMult,
    Search.CodeGen,
    Search.GeneticCode,
    Search.Genetic,
    Search.Search,
    Util.Logger 
  build-depends:
       base,
       mtl >=2.2.2,
       containers >= 0.6.0.1,
       matrix >= 0.3.6.1,
       random >= 1.2.1.1,
       process >= 1.6.3.0,
       regex-posix >= 0.96.0.1,
       random-shuffle >= 0.0.4,
       transformers >= 0.6.1.0,
       hashable >= 1.4.2.0
  hs-source-dirs: src
  default-language:    Haskell2010

Test-Suite Compile-Test
  type:               exitcode-stdio-1.0
  main-is:            Test/CAST_Test.hs
  hs-source-dirs:     src
  other-modules:
    Compile.CAST
  build-depends:
    base,
    hspec >= 2.7,
    hspec-discover >= 2.7
  default-langauge: Haskell2010
  --, test-framework, test-framework-hunit, HSpec

